<% include ../partials/header %>

<% if(currentUser && currentUser.isAdmin) { %>
    <h1>You are an admin!</h1>
<% } %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add new campground</a>
            </p>
        </div> 
    </header>
    

    <div class="row" style="display:flex; flex-wrap:wrap;">
        <div class="col-lg-12">
            <h3>Our most popular campgrounds</h3>
        </div>
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-3 col-sm-6">
                    <img src="<%= campground.image %>" alt="image" class="img-thumbnail">
                    <figcaption class="figure-caption text-center"><%= campground.name %></figcaption>
                    <p class="text-center mt-3">
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-sm btn-primary">More info</a>
                    </p>
            </div>
            
        <% }); %>
    </div>
</div>


<% include ../partials/footer %>